
@{
    <!DOCTYPE html>
    <html>
    <head>
        <link rel="stylesheet" href="~/css/style.css" asp-append-version="true" />
        <title>Login Page</title>
        <link rel="stylesheet" type="text/css" href="style.css">
    </head>
    
    <body>
        <div class="login-container">
            <h1>Login <h1>

            <form method="post" id="loginForm" action="client">
                <input type="text" id="Userlogin" name="Userlogin" placeholder="Username" required>
                <input type="password" id="Pin" name="Pin" placeholder="Password" required>
                <button type="submit">Login</button>
                </form>
            
            <div id="message"></div>
        </div>

    </body>
    </html>
}
